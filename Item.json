{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Item",
    "description": "An Item to be used in an auction",
    "type": "object",
    "properties": {
      "Id": {
        "description": "The uniqueidentifier for the item",
        "type": "string"
    },
      },
      "Seller": {
        "description": "The seller who sells the item",
        "type": "object"
      },
      "Brand": {
          "description": "The brand of the item",
          "type": "string"
        },
      "Description": {
          "description": "The description of the time",
          "type": "string"
      },
        "ImageFileId": {
          "description": "The item has an image which gets an id",
          "type": "string" 
        },
        "Category":{
            "description": "Category of item",
            "type": "string"
        },
        "Location":{
            "description": "Where item is located",
            "type": "string"
        }
  
    },
    "required": ["id", "title", "brand", "description", "startingprice", "imagefileid", "category", "located", "user"]
  }
