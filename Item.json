{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Item",
    "description": "An Item to be used in an auction",
    "type": "object",
    "properties": {
      "Id": {
        "description": "The uniqueidentifier for the item",
        "type": "string"
    },
      },
      "Seller": {
        "description": "An object of the seller of the item",
        "type": "object"
      },
    
      "Title": {
          "description": "The title of the item",
          "type": "string"
        },
      "Brand": {
          "description": "The brand of the item",
          "type": "string"
        },
      "Description": {
          "description": "The description of the time",
          "type": "string"
      },
        "ImageFileId": {
          "description": "The id of the items image",
          "type": "string" 
        },
        "Category":{
            "description": "Category of the item",
            "type": "object"
        },
        "Location":{
            "description": "Where the item is located",
            "type": "string"
        }
  
    },
    "required": ["Id", "Title", "Brand", "Description", "Startingprice", "Imagefileid", "Category", "Located", "User"]
  }
