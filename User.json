{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "description": "A User",
    "type": "object",
    "properties": {
      "Id": {
        "description": "The uniqueidentifier for the user",
        "type": "string"
      },
      "FirstName": {
        "description": "firstname of the user",
        "type": "string"
      },
      "LastName": {
          "description": "Lastname of the user",
          "type": "string"
      },
      "Email": {
          "description": "Email of the user",
          "type": "string"
        },
        "PasswordHash": {
          "description": "Hash of the password",
          "type": "string" 
        },
        "PasswordSalt": {
            "description": "Salt of the password", 
            "type": "string"
        }
    },
    "required": ["Id", "FirstName", "LastName", "Email", "PasswordHash", "PasswordSalt"]
  }
