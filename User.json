{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Auction",
    "description": "A product from Acme'scatalog",
    "type": "object",
    "properties": {
      "id": {
        "description": "The uniqueidentifierfor a product",
        "type": "string"
      },
      "Seller": {
        "description": "The seller of the product",
        "type": "object"
      },
      "Title": {
          "description": "The title of the product",
          "type": "string"
      },
      "Brand": {
          "description": "The brand of the product",
          "type": "string"
        },
        "Description": {
          "description": "The description of the product",
          "type": "string" 
        },
        "Category": {
            "description": "category of the product", 
            "type": "object"
        }, 
        "Location":{
          "description": "location of the product", 
          "type": "string"
        }
    },
    "required": ["id", "firstname", "lastname", "email", "passwordhash", "passwordsalt", "mobilenuber"]
  }
