{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Bid",
  "description": "A bid for an auction",
  "type": "object",
  "properties": {
    "Id": {
      "description": "The uniqueidentifier for the bid",
      "type": "string"
    },
    "Bidder": {
      "description": "An object of the User who made the bid",
      "type": "object"
    },
    "Amount": {
      "description": "Price of the bid",
      "type": "number"
    },
    "Date": {
      "description": "date and time when the bid was placed",
      "type": "string"
    }
  },
  "required": ["Id", "Bidder", "Amount", "Date"]
}
