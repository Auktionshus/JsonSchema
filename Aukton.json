{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Auction",
  "description": "A product from Acme'scatalog",
  "type": "object",
  "properties": {
    "id": {
      "description": "The uniqueidentifierfor a product",
      "type": "string"
    },
    "Item": {
      "description": "The name of the item",
      "type": "string"
    },
    "HighsteBider": {
        "description": "An object of user who give the highst bid",
        "type": "string"
      },
    "Bids": {
        "description": "array of bids",
        "type": "array"
    },
    "CurrentPrice": {
        "description": "Current price for Auction",
        "type": "number"
      },
      "starttime": {
        "description": "the start time of the auction",
        "type": "string" 
      },
      "endtime": {
        "description": "the end time of the auction",
        "type": "string"
      },
      "startingprice": {
        "description": "the start price of the auction",
        "type": "number"
      },
      "currentprice": {
        "description": "the currentprice of the auction",
        "type": "number"
      }
  },
  "required": ["id", "starttime","endtime", "startprice","currentprice", "bidhistory"]
}
